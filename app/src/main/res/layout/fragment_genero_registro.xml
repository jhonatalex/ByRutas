<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondosplash">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/next_sex"
        android:layout_width="54dp"
        android:layout_height="57dp"
        android:layout_marginStart="302dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="301dp"
        android:clickable="true"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_send" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="379dp"
        android:layout_height="229dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="396dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logobyrutas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="189dp"
        android:layout_height="97dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="392dp"
        android:src="@drawable/genero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="302dp"
        android:layout_height="75dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="386dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMen"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Hombre"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioGirls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Mujer"
                android:textSize="24sp" />
        </LinearLayout>

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
